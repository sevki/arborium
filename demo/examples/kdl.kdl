// KDL configuration example
package {
    name "my-app"
    version "1.0.0"
    authors "Alice" "Bob"
}

dependencies {
    serde version="1.0" features=["derive"]
    tokio version="1.0" {
        features "full" "rt-multi-thread"
    }
}

server host="0.0.0.0" port=8080 {
    tls enabled=true {
        cert "/etc/ssl/cert.pem"
        key "/etc/ssl/key.pem"
    }
}
